@model IEnumerable<ParkFacilAdm.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="page-title">
    Administración de clientes
</h3>

<div class="col-md-12">
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-user"></i>Administración de Clientes
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse"> </a>
                <a href="javascript:;" class="fullscreen"> </a>
            </div>
            <div class="actions">
                <div class="inputs pull-right">
                    <a href="//Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                        <i class="fa fa-plus-circle"></i> Nuevo
                    </a>
                </div>
                <div class="inputs pull-right">
                    @using (Html.BeginForm())
                    {
                        <div class="portlet-input input-inline input-medium">
                            <div class="input-group">
                                @Html.TextBox("Buscar", null, new { @class = "form-control input-circle-left", @placeholder = "Buscar", @title = "Buscar" })
                                <span class="input-group-btn">
                                    <button class="btn btn-circle-right btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NOMBRE_CLIENTE)
                    </th>
                    <th>

                        @Html.DisplayNameFor(model => model.APELLIDO_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MAIL_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TELEFONO_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PATENTE_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA_INGRESO_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA_TERMINO_CLIENTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CREADOR_CLIENTE)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.APELLIDO_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MAIL_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TELEFONO_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PATENTE_CLIENTE)
                    </td>

                    <td>

                        @Html.DisplayFor(modelItem => item.FECHA_INGRESO_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA_TERMINO_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CREADOR_CLIENTE)
                    </td>
                    <td>
                        <div>
                            @Html.AntiForgeryToken()
                            @Html.ActionLink("Modificar", "Edit", "Cliente", new { id = item.ID_CLIENTE }, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                            @Html.ActionLink("Eliminar", "Delete", "Cliente", new { id = item.ID_CLIENTE }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
                }


            </table>
        </div>
    </div>
</div>
